<%= simple_form_for(@post, html: {class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {class: 'form-control'}, label: false, placeholder: "Title" %>
    <%= f.input :body, input_html: {class: 'form-control'}, label: false, placeholder: "(Useless) Content" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
