<%= simple_form_for(@post, html: {class: "form-horizontal" }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, input_html: {class: 'form-control'}, label: false, placeholder: "Title" %></br>
    <%= f.input :body, input_html: {class: 'form-control'}, label: false, placeholder: "(Useless) Content" %></br>
    <% if current_user.verify_posting_permission == 'granted' %>
    Post On Facebook <%= f.check_box :post_on_facebook %></br>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
